<launch>

  <!-- Launch file for collecting the "Double Laser" Data Set
       The launches the neato base, and neato laser.
       Additionally, we have Hokuyo URG-04LX-UG01 laser, above the neato laser -->

  <node pkg="tf" type="static_transform_publisher" name="neato_laser_to_base" 
    args="-0.1016 0 0.0889 0 0 0 base_link neato_laser_link 50" />

  <node pkg="tf" type="static_transform_publisher" name="hokuyo_laser_to_base" 
    args="-0.1016 0 0.1778 0 0 0 base_link hokuyo_laser_link 50" />

  <!-- Neato and Laser -->
  <node name="neato" pkg="neato_node" type="neato.py" output="screen" >
    <param name="frame_id" type="string" value="neato_laser_link" />
  </node>

  <!-- Hokuyo Laser -->
  <node pkg="hokuyo_node" type="hokuyo_node" name="base_hokuyo_node" args="scan:=hokuyo_scan">
    <param name="frame_id" type="string" value="hokuyo_laser_link" />
    <param name="min_ang" type="double" value="-2.2689" />
    <param name="max_ang" type="double" value="2.2689" />
  </node>

</launch>
