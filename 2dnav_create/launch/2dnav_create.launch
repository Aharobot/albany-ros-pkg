<launch>
  <node name="create_base" pkg="irobot_create_2_1" type="driver.py" />
 
  <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node" output="screen">
    <remap from="scan" to="base_scan" />
    <param name="frame_id" value="base_laser" />
  </node>

  <node pkg="tf" type="static_transform_publisher" name="lidar_tf" output="screen"
    args="0 0 0.165 0 0 0 base_link base_laser 100" />

</launch>
